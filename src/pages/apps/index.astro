---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";
---

<MainLayout title={`Apps | ${SITE.title}`}>
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">
    <div class="mb-10 max-w-2xl">
      <h1 class="text-balance text-3xl font-bold tracking-tight text-neutral-800 md:text-4xl md:leading-tight">
        Our Apps
      </h1>
      <p class="mt-3 text-pretty text-neutral-600">
        Desktop and mobile applications built with native performance in mind.
      </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Elysium -->
      <a
        href="https://elysium.is"
        target="_blank"
        rel="noopener noreferrer"
        class="group rounded-xl border border-neutral-200 bg-white p-6 transition hover:border-neutral-400 hover:shadow-lg"
      >
        <div class="mb-4 flex items-center gap-3">
          <img
            src="https://elysium.is/assets/elysium-icon.png"
            alt="Elysium"
            class="h-12 w-12 rounded-xl"
          />
          <h2 class="text-xl font-semibold text-neutral-900">Elysium</h2>
        </div>
        <p class="mb-4 text-sm text-neutral-600">
          A local-first scheduling app for goals, tasks, habits, and more. Built on OpenTime for complete data ownership.
        </p>
        <div class="mb-4 flex flex-wrap gap-2">
          <span class="rounded-full bg-neutral-100 px-3 py-1 text-xs font-medium text-neutral-700">macOS</span>
          <span class="rounded-full bg-neutral-100 px-3 py-1 text-xs font-medium text-neutral-500">iOS (Coming Soon)</span>
        </div>
        <div class="flex items-center text-sm font-medium text-neutral-900 group-hover:text-neutral-600">
          Visit elysium.is
          <svg class="ml-1 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </a>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-neutral-900 py-16 sm:py-20">
    <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
        Ready for Your Own App?
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-neutral-400">
        We build custom desktop and mobile applications tailored to your needs. From concept to launch, let's bring your idea to life.
      </p>
      <div class="mt-8">
        <a
          href="/contact"
          class="inline-flex items-center justify-center gap-x-2 rounded-lg bg-slate-600 px-6 py-3 text-sm font-bold text-neutral-50 transition duration-300 hover:bg-slate-500 focus:outline-none focus-visible:ring-3 focus-visible:ring-slate-400"
        >
          Let's Talk
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</MainLayout>
